extends layout

block content
  .row
    .hero.large-12
      img(src="/images/header-contact.png", alt="About Us")

    .columns.large-6
      h2 Send Us An Email

      if err
        .alert-box.warning=err.message
      

      form(method="POST" action="/contact")
        label Name
        input(type="text", name="name", placeholder="Enter your name", value=data.name)

        label Email Address
        input(type="text", name="from", placeholder="Enter your email", value=data.from)

        label Message
        textarea(name="message", placeholder="Enter your message")=data.message

        input(type="submit", value="Send").button

    .columns.large-6
